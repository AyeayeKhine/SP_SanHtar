                    </div>
                    <div class="col-lg-12 col-md-12 col-12">
                        <div class="row">
                            <div class="left-box ml-0 d-md-inline-block d-none">
                            </div>
                            <div class="d-md-none d-inline-block mt-3"><i class="fa fa-align-left text-white px-1" aria-hidden="true" data-toggle="collapse" href="#collapse" role="button" aria-expanded="false" aria-controls="collapse"></i></div>
                        </div>
                    </div>
                </div>
                <div class="collapse bg-primary w-100" id="collapse">
                    <div class="col-lg-12 col-md-12 col-12">
                        <div class="menu-tab">
                            <div class="input-group">
                                <div class="input-group-append mr-4"><i class="fa fa-search text-white" aria-hidden="true"></i></div>
                                <input class="form-control bg-primary border border-top-0 border-left-0 border-right-0" type="text" />
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-12 col-md-12 col-12">
                        <div class="menu-tab btn btn-primary my-1" v-for="item in menu">
                            <div class="row">
                                <div class="menu-img"><img class="w-100" v-bind:src="item.img" alt="" /></div>
                                <p class="text-white py-2 ml-4 my-0">{{item.text}}</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="w-100" style="display: inherit;">
                <div class="d-md-inline-block d-none" id="leftmenu" v-bind:class="{ 'left-active': isActive }">
                    <div class="left-tab bg-primary" v-bind:class="{ 'left-active': isActive }">
                        <div class="col-lg-12 col-md-12 col-12 mt-2"><i class="fa fa-align-left text-white px-1" aria-hidden="true" v-on:click="isActive = !isActive"></i></div>
                        <div class="col-lg-12 col-md-12 col-12 px-0" v-for="item in menu">
                            <a class="menu-tab btn btn-primary my-1 px-4" :href="item.link">
                                <div class="row">
                                    <div class="menu-img"><img class="w-100" :src="item.img" alt="" /></div>
                                    <p class="text-white py-2 ml-4 my-0">{{item.text}}</p>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
                <div class="container py-3">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>

</body>
