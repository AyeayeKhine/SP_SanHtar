                                                <p class="m-0 text-primary mt-1">User Type</p>
                                            </div>
                                            <div class="col-lg-8 col-md-8 col-12">
                                                <select class="form-control form-control-sm border-rad bg-primary" v-model="UserType" :disabled="$root.statusUpdate">
