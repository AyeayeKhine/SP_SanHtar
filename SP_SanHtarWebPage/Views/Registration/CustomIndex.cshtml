                                    </div>
                                </div>

                            </div>
                            <br /><br />
                            <i class="fa fa-bank"></i>Assign To
                            <div class="col-lg-12 col-md-12 col-12 mt-3 border border-darkblue border-top-0 border-left-0 border-right-0"></div>
                            <div class="col-lg-12 col-md-12 col-12 mt-3">
                                <div class="row">
                                    <div class="col-xl-6 col-lg-6 col-md-12 col-12 mt-2">
                                        <div class="row">
                                            <div class="col-lg-4 col-md-4 col-12">
                                                <p class="m-0 text-primary mt-1">Select Chapter</p>
                                            </div>
                                            <div class="col-lg-8 col-md-8 col-12">
                                                <select v-model="chapterId" class="form-control form-control-sm border-rad bg-primary" v-on:change="onChange($event)"
                                                multiple :disabled="$root.statusUpdate" v-show ="!$root.statusUpdate">
                                                    <option v-for="role in Chapterdata" :value="role.ID">{{role.Text}}</option>
                                                </select>
                                               <label class="form-control form-control-sm border-rad" v-show="$root.statusUpdate" :disabled="$root.statusUpdate">{{this.ChemistryString}}</label>
