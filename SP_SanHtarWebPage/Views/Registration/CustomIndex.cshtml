                                    </div>

                                </div>

                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <div class="row">
                <div class="col-lg-12 col-md-12 col-12">
                    <div class="row">
                        <div class="col-xl-1 col-lg-2 col-md-3 col-12 mt-3 px-2">
                            <button class="btn btn-danger shadow-box w-100 text-white" v-on:click="Cancel()">Cancel</button>
                        </div>
                        <div class="col-xl-1 col-lg-2 col-md-3 col-12 mt-3 px-2" v-show="$root.statusUpdate">
                            <button class="btn btn-primary shadow-box w-100 text-white" v-on:click="Edit()">Edit</button>
                        </div>
                        <div class="col-xl-1 col-lg-2 col-md-3 col-12 mt-3 px-2" v-show ="!$root.statusUpdate">
                            <button class="btn btn-primary shadow-box w-100 text-white" v-on:click="SaveData()">Save</button>
                        </div>

                    </div>
                </div>
            </div>
            <br />
        </div>
    </div>


</script>

<script>
    Vue.component('v-edit-user', {
        template: "#edit-user-template",
        data() {
            return {

                statusResult: false,
                statusReject: 1,
                FirstName: "",
                LastName: "",
                UserType: "Select",
                UserName: "",
                Password: "",
                Email: "",
                PersonalContactNumber: "",
                OtherContactNumber: "",
                fileName: "",
                Sex: "Select",
                chapterId: "",
                Chapterdata: [],
                partId: 0,
                Partdata: [],
                ChemistryString: ""
            }
        },
        methods: {
            SaveData: function () {
                //this.statusUpdate = true;
                this.statusResult = false;
                var that = this;
                var CId = this.chapterId[0];
                for (var i = 1; i < this.chapterId.length; i++) {
                    CId += "," + this.chapterId[i];
                }
                var temp =
                {
                    ID: new URL(window.location.href).searchParams.get('id'),
                    FirstName: this.FirstName,
                    LastName: this.LastName,
                    UserType: this.UserType,
                    UserName: this.UserName,
                    Password: this.Password,
                    Email: this.Email,
                    PersonalContactNumber: this.PersonalContactNumber,
                    OtherContactNumber: this.OtherContactNumber,
                    fileName: this.fileName,
                    Sex: this.Sex,
                    PartID: this.partId,
                    ChemistryID: CId,
                }
                $.ajax({
                    type: 'POST',
                    url: '/Registration/InsertUser?receive=' + JSON.stringify(temp),
                    processData: false,
                    contentType: false,
                    cache: false,
                    enctype: 'multipart/form-data',
                    success: data => {
                        if (data.status == 2) {
                            alert("User Form Update Sucessful !")
                            this.$parent.statusUpdate = true;
                            this.ChemistryString = data.Data.ChemistryString;
                        } else {
                            alert(data.message)
                        }

                    },
                    error: function (err) {
                        alert(err.message)
                        console.log(err);
                    }
                });
            },
            onChange(event) {
                $.ajax({
                    url: "/ChemistryDetail/GetDetailChemistryDropdown/" + event.target.value,
                    success: codes => this.Partdata = codes,
                    error: err => console.log(err)
                })
            },
            Cancel: function () {
                window.close();
            },
            Edit: function () {
                this.$parent.statusUpdate = false;
            },
            onBind: function () {
                var getStatus = new URL(window.location.href).searchParams.get('UpdateStatus');
                var getID = new URL(window.location.href).searchParams.get('id');
                if (getStatus == "true") {
                    this.$parent.statusUpdate = true;
                } else {
                    this.$parent.statusUpdate = false;
                }
                var temp = { ID: getID }
                $.ajax({
                    type: 'POST',
                    url: '/Registration/GetbyId?receive=' + JSON.stringify(temp),
                    processData: false,
                    contentType: false,
                    cache: false,
                    enctype: 'multipart/form-data',
                    success: data => {
                        if (data.status == 2) {
                            this.FirstName = data.Data.FirstName;
                            this.LastName = data.Data.LastName;
                            this.UserType = data.Data.UserType;
                            this.UserName = data.Data.UserName;
                            //this.Password = data.Data.;
                            this.Email = data.Data.Email;
                            this.PersonalContactNumber = data.Data.PersonalContactNumber;
                            this.OtherContactNumber = data.Data.OtherContactNumber;
                            this.Sex = data.Data.Sex;
                            this.chapterId = data.Data.ChemistryID.split(',');
                            this.ChemistryString = data.Data.ChemistryString;
                        } else {
                            alert(data.message)
                        }

                    },
                    error: function (err) {
                        alert(err.message)
                        console.log(err);
                    }
                });
            }

        },
        mounted() {
            $.ajax({
                url: "/Chemistry/GetChemistryDropdown",
                success: codes => this.Chapterdata = codes,
                error: err => console.log(err)
            });
            this.$nextTick(() => {
                this.onBind();
            });
        },
        computed() {
            //this.$nextTick(() => {
            //    var getStatus = new URL(window.location.href).searchParams.get('UpdateStatus');
            //    this.statusUpdate = getStatus;
            //});
        }
    });

    new Vue({
        el: "#EditRegister",
        data() {
            return {
                statusUpdate: true,
            }
        },
        methods:
        {

        }
    })



</script>