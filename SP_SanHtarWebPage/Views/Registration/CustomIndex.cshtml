                                            <div class="col-lg-4 col-md-4 col-12">
                                                <p class="m-0 text-primary mt-1">Sex</p>
                                            </div>
                                            <div class="col-lg-8 col-md-8 col-12">
                                                <select class="form-control form-control-sm border-rad bg-primary" v-model="Sex" :disabled="$root.statusUpdate">
                                                    <option selected disabled>Select</option>
                                                    <option value="1">Female</option>
