                            <br /><br />
                            <i class="fa fa-bank"></i>Contact Info
                            <div class="col-lg-12 col-md-12 col-12 mt-3 border border-darkblue border-top-0 border-left-0 border-right-0"></div>
                            <div class="col-lg-12 col-md-12 col-12 mt-3">
                                <div class="row">
                                    <div class="col-xl-6 col-lg-6 col-md-12 col-12 mt-2">
                                        <div class="row">
                                            <div class="col-lg-4 col-md-4 col-12">
                                                <p class="m-0 text-primary mt-1">Personal Contact Number</p>
                                            </div>
                                            <div class="col-lg-8 col-md-8 col-12">
                                                <input class="form-control form-control-sm border-rad" type="text" v-model="PersonalContactNumber" placeholder="PersonalContactNumber" :disabled="$root.statusUpdate"/>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-xl-6 col-lg-6 col-md-12 col-12 mt-2">
                                        <div class="row">
                                            <div class="col-lg-4 col-md-4 col-12">
